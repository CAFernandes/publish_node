<!DOCTYPE html>
<html lang="en">

<head>
	<%- include("../../includes/head.ejs") %>
</head>

<body>
	<%- include("../../includes/header.ejs") %>
	<main class="container my-4">
		<% if(publish.length > 0) { %>
		<div class="jumbotron">
			<h1 class="display-3"><%= publish[0].titulo %></h1>
			<p class="lead"><%= publish[0].resumo %></p>
			<hr class="my-4">
			<p>Por <%= publish[0].data_noticia %></p>
			<p>Por <%= publish[0].autor %></p>
			<p class="lead">
				<a class="btn btn-outline-primary btn-lg" href="./publish/<%= publish[0].id %>" role="button">Veja Mais</a>
			</p>
		</div>
		<% if(publish.length > 1) { %>
			<hr class="my-2">
			<div class="row">
				<% for(var i = 1; i < publish.length; i++){ %>
					<div class="col-md-4 my-4">
						<div class="card">
							<div class="card-body">
								<h4 class="card-title"><%= publish[i].titulo %></h4>
    						<h6 class="card-subtitle mb-2 text-muted">Por <%= publish[i].autor %></h6>
								<h6 class="card-subtitle mb-2 text-muted"><%= publish[i].data_noticia %></h6>
								<p class="card-text"><%= publish[i].resumo %></p>
    						<p class="lead"><a class="btn btn-outline-primary btn-lg" href="./publish/<%= publish[i].id %>" class="card-link">Veja Mais</a></p>
							</div>
						</div>
					</div>
				<% } %>
			</div>
		<% }
		} else {} %>
	</main>
	<%- include("../../includes/footer.ejs") %>
</body>

</html>