<!DOCTYPE html>
<html lang="pt-BR">

<head>
	<%- include("../../includes/head.ejs") %>
</head>

<body>
	<%- include("../../includes/header.ejs") %>
	<main class="jumbotron">
		<% noticia.forEach(function (el) { %>
		<section class="container">
			<h1><%=el.titulo %></h1>
			<div class="row">
				<div class="col-md-12">
					<div class="noticia_wrapper">
						<span class="noticia_autor">Por <%=el.autor %></span>
						<a href="../edit/<%=el.id%>" class="edit">Editar</a>
						<span class="noticia_data"><%=el.data_noticia %></span>
						<p class="noticia_resumo">
							<%=el.conteudo %>
						</p>
					</div>
				</div>
			</div>
		</section>
		<% }) %>
	</main>
	<%- include("../../includes/footer.ejs") %>
</body>

</html>